<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backpage"
    android:orientation="vertical"
    android:padding="15dp">

    <comc.shiv.csdn.custom_text
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"
        android:text="Contact us  "
        android:textColor="#000"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <comc.shiv.csdn.custom_text
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Name :-"
                android:textColor="#000"
                android:textSize="17dp" />

            <comc.shiv.csdn.custom_font_for_edittext
                android:id="@+id/ext_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Full name"
                android:inputType="textCapCharacters"
                android:padding="12dp"
               android:layout_marginLeft="5dp"
                android:textColor="#4b4b4b"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <comc.shiv.csdn.custom_text
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Mobile :-"
                android:textColor="#000"
                android:textSize="17dp" />

            <comc.shiv.csdn.custom_font_for_edittext
                android:id="@+id/ext_user_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Mobile"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginLeft="5dp"
                android:textColor="#4b4b4b"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <comc.shiv.csdn.custom_text
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:text="Inquiry :-"
                android:textColor="#000"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/inquiry_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Mobile"
                android:inputType="number"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <comc.shiv.csdn.custom_text
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:text="Location/City :-"
                android:textColor="#000"
                android:textSize="17dp" />

            <comc.shiv.csdn.custom_font_for_edittext
                android:id="@+id/massege"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Type your "
                android:inputType="textCapSentences"
                android:paddingLeft="10dp"
                android:textColor="#4b4b4b"
                android:textSize="14dp" />
        </LinearLayout>

        <comc.shiv.csdn.custom_text
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Massage "
            android:textColor="#000"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <comc.shiv.csdn.custom_font_for_edittext
                android:id="@+id/locati"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_edittext"
                android:hint="Type your "
                android:inputType="textCapSentences"
                android:paddingLeft="10dp"
                android:textColor="#4b4b4b"
                android:textSize="14dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <comc.shiv.csdn.custom_spinner
                android:id="@+id/btn_submit"
                android:layout_width="225sp"
                android:layout_height="38sp"
                android:layout_alignLeft="@+id/btn2"
                android:layout_below="@+id/textView1"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundedbutton"
                android:text="Submit" />

            <comc.shiv.csdn.custom_spinner
                android:id="@+id/btn_reset"
                android:layout_width="225sp"
                android:layout_height="38sp"
                android:layout_alignLeft="@+id/btn2"
                android:layout_below="@+id/textView1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:text="Reset" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>